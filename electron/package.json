{
  "name": "bcs-face-finder",
  "version": "1.0.0",
  "description": "BCS Face Finder desktop application for NAS face recognition",
  "author": "Blink Creative Studio",
  "main": "main.js",

  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },

  "dependencies": {},

  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0"
  },

  "build": {
    "appId": "com.bcs.facefinder",
    "productName": "BCS Face Finder",

    "directories": {
      "buildResources": "electron"
    },

    "files": [
      "**/*",
      "backend/**/*",
      "frontend/dist/**/*"
    ],

    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      },
      {
        "from": "frontend/dist",
        "to": "frontend/dist"
      }
    ],

    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg"],
      "artifactName": "BCS-Face-Finder-${version}-${arch}.dmg"
    }
  }

}
